<h1>These are the Gardens</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @gardens.sort_by(&:created_at).reverse.each do |garden| %>
      <tr>
        <th scope="row"><%= garden.id %></th>
        <td><%= link_to garden.name, "/gardens/#{garden.id}" %></td>
        <td><%= garden.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
