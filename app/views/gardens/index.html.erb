<h1>These are the Gardens</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @gardens.each do |garden| %>
      <tr>
        <th scope="row"><%= garden.id %></th>
        <td>
          <%= link_to garden.name, "/gardens/#{garden.id}" %>
          <%= link_to "Edit", "/gardens/#{garden.id}/edit" %>
          <%= link_to "Delete", "/gardens/#{garden.id}", method: :delete, data: {confirm: "Really delete the plant?"} %>
        </td>
        <td><%= garden.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
